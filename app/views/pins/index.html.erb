<div class="col-md-12">
  <div class="pin">
    <%= link_to("新增照片", new_pin_path, class: "btn btn-primary pull-right" )%>
  </div>
  <% @pins.each do |pin| %>
  <%= link_to (image_tag pin.image.url(:medium)),pin%>
  <h2><%= link_to(pin.title, pin_path(pin)) %></h2>
  <p><%= pin.description %></p>
  <% end %>
</div>
